                <td class="maintenance-reset-column">
                    <button class="btn btn-mini maintenance-reset-btn" data-bind="click: resetGantryUsage">{{ _('Reset') }}</button>
                </td>
            </tr>
        </table>
    </div>

    <div id="reset_counter_are_you_sure" class="modal hide fade">
        <div class="modal-header">
            <h4>{{ _('Did you %(action_to_reset)s the %(component_to_reset)s?',
            action_to_reset='<span data-bind="text: actionToReset"></span>',
            component_to_reset='<span data-bind="text: componentToReset"></span>') }}</h4>
        </div>
        <div class="modal-body">
            {{ _('The hour counter for the %(component_to_reset)s will now be reset.', component_to_reset='<span data-bind="text: componentToReset"></span>')}}<br>
            {{ _('Please notice that there is no way to undo this operation') }}.
        </div>
        <div class="modal-footer">
            <button type="button" data-dismiss="modal" class="btn btn-primary" id="reset_counter_btn">{{ _('Yes') }}</button>
            <button type="button" data-dismiss="modal" class="btn">{{ _('No') }}</button>
        </div>
    </div>
</div>

<div class="tab-pane" id="messages">
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span4">
                <div class="mrb-messages-container rounded_container">
                    <h1 class="mrb-messages-title">Messages From Mr. Beam</h1>
                    <div class="mrb-message-list" data-bind="foreach: messages">
                        <div data-bind="if: read">
                            <div class="mrb-message-element rounded_container mrb-message-read"
{#                                 data-bind="css: { selected: $index() == $root.selectedIndex(), 'mrb-message-read': $index() == $root.selectedIndex() }, click: $root.onIndexSelected.bind($root, $index())">#}
{#                                 data-bind="css: { selected: $index() == $root.selectedIndex() }, click: $root.onIndexSelected.bind($root, $index())">#}
                                 data-bind="css: { selected: $index() == $root.selectedIndex() }, click: function(data, event) { $root.onIndexSelected($index(), data, event) }">
                                <h5 class="mrb-message-title" data-bind="text: content.title"></h5>
                            </div>
                        </div>
                        <div data-bind="ifnot: read">
                            <div class="mrb-message-element rounded_container "
{#                                 data-bind="css: { selected: $index() == $root.selectedIndex() }, click: $root.onIndexSelected.bind($root, $index())">#}
                                 data-bind="css: { selected: $index() == $root.selectedIndex() }, click: function(data, event) { $root.onIndexSelected($index(), data, event) }">
                                <h5 class="mrb-message-title" data-bind="text: content.title"></h5>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="span8">
                <!-- ko if: $root.selectedIndex() == undefined -->
                <div id="no-mrb-messages-selected">
                    <h1> No Messages selected </h1>
                </div>
                <!-- /ko -->
                <div id="mrb-message-view" data-bind="with: $root.messages()[$root.selectedIndex()]">
                    <div class="mrb-message-content">
                        <div data-bind="visible: images[0] != undefined">
                            <div class="row-fluid">
                                <div class="span12">
                                    <h2 class="mrb-message-content-title"
                                        data-bind="text: content.title"></h2>
                                    <div class="mrb-message-date" data-bind="text: date"></div>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span6">
                                    <div class="mrb-message-text-container rounded_container">
                                        <div class="mrb-message-text" data-bind="text: content.body"></div>
                                        <div class="cta" data-bind="visible: content.cta_url">
                                            <a href="#" target="_blank"
                                               data-bind="text:content.cta_label, attr: { href: content.cta_url }"></a>
                                        </div>
                                        <div class="thumbnail-list">
                                            <ul class="thumbnails"
                                                data-bind="foreach: { data: images, as: 'img' }">
                                                {#                                                    <li class="span3">#}
                                                <li>
                                                    <a href="#"
                                                       class="thumbnail">
                                                        <div class="preview"
                                                             data-bind="click: $root.selectImage, style: {'background-image': 'url('+img+')' }">
                                                        </div>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="span6">

                                    {#                                    ------------------#}

                                    {#                                    <div id="myCarousel" class="carousel slide">#}
                                    {#                                        <!-- Carousel items -->#}
                                    {#                                        <div class="carousel-inner" data-bind="foreach: { data: images, as: 'img' }">#}
                                    {#                                            <div class="item"><img data-bind="attr:{src: img}"></div>#}
                                    {#                                        </div>#}
                                    {#                                      <!-- Carousel nav -->#}
                                    {#                                      <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>#}
                                    {#                                      <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>#}
                                    {#                                    </div>#}

                                    {#                                    ------------------#}

                                    <div class="single-design-img-gallery rounded_container">
                                        <div class="inner-container">
                                            <div class="design-img-container rounded_container">
                                                <div id="design-img-preview"
                                                     data-bind="style: {'background-image': 'url('+images[0]+')' }">
                                                </div>
                                            </div>
                                            {#                                            <div class="thumbnail-list">#}
                                            {#                                                <ul class="thumbnails"#}
                                            {#                                                    data-bind="foreach: { data: images, as: 'img' }">#}
                                            {#                                                    <li class="span3">#}
                                            {#                                                    <li class="">#}
                                            {#                                                        <a href="#"#}
                                            {#                                                           class="thumbnail">#}
                                            {#                                                            <div class="preview"#}
                                            {#                                                                 data-bind="click: $root.selectImage, style: {'background-image': 'url('+img+')' }">#}
                                            {#                                                            </div>#}
                                            {#                                                        </a>#}
                                            {#                                                    </li>#}
                                            {#                                                </ul>#}
                                            {#                                            </div>#}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div data-bind="visible: images[0] == undefined">
                            <div class="row-fluid">
                                <div class="span12">
                                    <h2 class="mrb-message-content-title"
                                        data-bind="text: content.title"></h2>
                                    <div class="mrb-message-date" data-bind="text: date"></div>
                                    <div class="mrb-message-text-container no-img rounded_container">
                                        <div class="mrb-message-text" data-bind="text: content.body"></div>
                                        <div class="cta" data-bind="visible: content.cta_url">
                                            <a href="#" target="_blank"
                                               data-bind="text:content.cta_label, attr: { href: content.cta_url }"></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="quick_text_dialog" class="modal hide fade modal-left-side" >
    <div class="modal-header">
{#        <a href="#" class="close" data-dismiss="modal" aria-hidden="true">&times;</a>#}
        <h3>{{ _('Quick Text') }}</h3>
    </div>
    <div class="modal-body">
        <form role="form" class="form-search" data-bind="submit: function(){$('#quick_text_dialog').modal('hide');}" _lpchecked="1">
            <input type="text" id="quick_text_dialog_text_input" class="input-block quicktext-input" data-bind="textInput: currentQuickText" placeholder="{{ _('QuickText...') }}" autocomplete="off"/>
            <div id="qt_dialog_preview">
                <svg id="qt_dialog_preview_svg" viewBox="0 0 100 33" style="width: 100%; height:3em; overflow:visible;">
                    <use href="" transform="" style="pointer-events: none" />
                </svg>
            </div>

            <div class="row-fluid padding-top">
				{# Translators: Aa - the first alphabet letter capitalized and not #}
				<div class="btn btn-small span3 quicktext-font-button" data-bind="click: currentQuickTextFontPrev"><i class="icon-chevron-left" title="{{ _('Previous Font') }}"></i> {{ _('Aa') }} </div>
				<div class="span6 quicktext-fontname" id="quick_text_dialog_font_name"></div>
				<div class="btn btn-small span3 quicktext-font-button" data-bind="click: currentQuickTextFontNext"> {{ _('Aa') }} <i class="icon-chevron-right" title="{{ _('Next Font') }}"></i></div>
			</div>

            <div id="quick_text_stroke_and_fill" class="form-horizontal">

                <div class="control-group">
                    <label class="control-label">{{ _('Fill Color') }}</label>
                    <div class="controls">
                        <input type="checkbox" value="fill" id="quick_text_fill" data-bind="click: _qt_currentQuickTextUpdate()" />
                        <div id="qt_colorPicker_fill" class="tinyColorPicker blackWhite">
                            <a class="tcp_color"><div class="colorInner"></div></a>
                            <div class="track"></div>
                            <ul class="dropdown"><li></li></ul>
                            <input type="hidden" class="colorInput" id="quick_text_fill_brightness">
                        </div>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label">{{ _('Line Color') }}</label>
                    <div class="controls">
                        <input type="checkbox" value="stroke" id="quick_text_stroke" checked data-bind="click: _qt_currentQuickTextUpdate()" />
                        <div id="qt_colorPicker_stroke" class="tinyColorPicker">
                            <a class="tcp_color"><div class="colorInner"></div></a>
                            <div class="track"></div>
                            <ul class="dropdown"><li></li></ul>
                            <input type="hidden" class="colorInput" id="quick_text_stroke_color" >
                        </div>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label">{{ _('Line Offset') }}</label>
                    <div class="controls">
                        <input id="quick_text_stroke_offset" type="range" max="15" min="0" value="0" step="1"
                                data-bind="event : {input: _qt_currentQuickTextUpdate()}"
                                style="width: 5em"
                                class="mrb_slider"/>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label">{{ _('Baseline') }}</label>
                    <div class="controls">
                        <div id="qt_round_text_section" class="straight">
                            <div  class="btn-group">
                                <div id="quick_text_straight" class="btn active"><img src="/plugin/mrbeam/static/img/straight_text_paths.svg" alt="straight text"/></div>
                                <div id="quick_text_cw" class="btn"><img src="/plugin/mrbeam/static/img/round_text_outside_paths.svg" alt="round text" class="round-text-icon clockwise pull-right"/></div>
                                <div id="quick_text_ccw" class="btn"><img src="/plugin/mrbeam/static/img/round_text_inside_paths.svg" alt="round text" class="round-text-icon counterclockwise pull-right"/></div>
                            </div>
                            <input id="quick_text_dialog_circle" class="mrb_slider" type="range" min="0" max="100" value="0" />
                        </div>

                    </div>
                </div>
			</div>

        </form>
    </div>
    <div class="modal-footer">
        <a class="btn btn-primary" id="quick_text_text_done_btn" data-dismiss="modal" aria-hidden="true">{{ _('OK') }}</a>
    </div>
</div>

<div id="laser_job_done_dialog" class="modal hide fade" data-backdrop="static">

    <div data-bind="visible: !is_dust_mode()">
        <div class="modal-header">
            <a href="#" class="close" data-bind='click: cancel_btn' aria-hidden="true">&times;</a>
            <h3>{{ _('Laser Job Finished') }}</h3>
        </div>
        <div class="modal-body">

            <div class="laser_job_done_image" style="background-image: url('/plugin/mrbeam/static/img/done_empty.jpg')">
                <i id="laser_job_done_image_check" class="icon-ok-sign show"></i>
                <div id="laser_job_done_image_text">
                        <p>{{ _('Inspire the Mr Beam Community') }}</p>
                        <p>{{ _('and be inspired too!') }}</p>
                        <p style="padding: 1.2em 0em 0em 0em;">{{ _('Tag your photos with') }}</p>
                        <p style="font-size: 3.3em; padding: 0.2em 0px"><a href="https://www.instagram.com/mrbeamlasers/" target="_blank">#madewithmrbeam</a></p>
                        <div>
                            <i class="icon-instagram laser_job_done_image_media_icon"></i>
                            <i class="icon-facebook-sign laser_job_done_image_media_icon"></i>
                            <i class="icon-twitter-sign laser_job_done_image_media_icon"></i>
                            <i class="icon-pinterest-sign laser_job_done_image_media_icon"></i>
                            <i class="icon-youtube-sign laser_job_done_image_media_icon"></i>
                            <i class="icon-linkedin-sign laser_job_done_image_media_icon"></i>
                        </div>
                    </div>
            </div>
            <h4 data-bind='visible: readyToLaser.jobTimeEstimationCalculated'>{{ _('Laser job duration:') }} <span data-bind='text: job_duration_formatted()'>    </span>
                <small>({{ _('Estimated:') }} <span data-bind='text: readyToLaser.jobTimeEstimationString'></span>)</small>
            </h4>
        </div>
        <div class="modal-footer">
            <a class="btn" id="laser_job_done_repeat_btn" data-bind='click: repeat_job' aria-hidden="true"><i class="icon icon-repeat"></i> {{ _('Repeat Job') }}</a>
            <a class="btn btn-primary" id="laser_job_done_done_btn" data-bind='click: cancel_btn' aria-hidden="true">{{ _('Close') }}</a>
        </div>
    </div>

    <div data-bind="visible: is_dust_mode()">
        <div class="modal-header">
            <h3>{{ _('Air Filter run-on') }}</h3>
        </div>
        <div class="modal-body">

            <img data-bind='visible: is_dust_mode()' src="/plugin/mrbeam/static/img/dusting.jpg">
            <h5 data-bind='visible: is_dust_mode()'>{{ _('Please wait a few seconds until Mr Beam cleared most of the dust particles out of the working area.') }}</h5>
            <h4 data-bind='readyToLaser.jobTimeEstimationCalculated'>{{ _('Laser job duration:') }} <span data-bind='text: job_duration_formatted()'>    </span>
                <small>({{ _('Estimated:') }} <span data-bind='text: readyToLaser.jobTimeEstimationString'></span>)</small>
            </h4>
        </div>
        <div class="modal-footer">
            <a class="btn pull-left" id="laser_job_done_cancel_dusting_btn" data-bind='visible: is_dust_mode(), click: cancelFinalExtraction' aria-hidden="true">{{ _('Cancel Air Filter run-on') }}</a>
        </div>
    </div>

</div>

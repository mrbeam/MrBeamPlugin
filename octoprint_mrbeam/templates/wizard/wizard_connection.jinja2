<div id="connection-wizard--general-connection-details" class="row mrb-height-100">
    <div class="span4 mrb-height-100">
        <div class="mrb-wrap">
            <div class="mrb-relative-position">
                <img loading="lazy" src="{{ url_for('plugin.mrbeam.static', filename='img/welcome_dialog/connection-option-a.png') }}">
                <span class="connection-wizard__span--a mrb-absolute-position"> {{ _('Used to setup') }} </span>
            </div>
            <h5>{{ _('Option A: WiFi direct connection') }}</h5>
            <p>{{ _('Connect your computer directly to your Mr Beam, without the help of a router or network.') }}</p>

            <div class="row connection-wizard__div--notice">
                <div class="span1">
                   <span>i</span>
                </div>

                <button class="btn connection-wizard__btn--back">
                    <img src="{{ url_for('plugin.mrbeam.static', filename='img/welcome_dialog/back-arrow.svg') }}">
                </button>
            </div>
        </div>
        <div id="connection-wizard--selected-option-a" class="row-fluid connection-wizard--selected-option hide">
            <div class="span12">
                <div class="row-fluid mrb-relative-position">
                    <div class="span12">
                        <img src="{{ url_for('plugin.mrbeam.static', filename='img/welcome_dialog/connection-option-detail-a.png') }}">
                        <span class="connection-wizard__span--a mrb-absolute-position"> {{ _('Used to setup') }} </span>
                    </div>
                </div>
                <div class="row-fluid connection-wizard--selected-option__div--main-content">
                    <div class="span6 connection-wizard--selected-option__div--main-content-left">
                        <h4>{{ _('Option A: WiFi direct connection') }}</h4>
                        <p>{{ _('No Internet access or network infrastructure is required. You may not be able to use the Internet on your computer while connected to Mr Beam.') }}</p>
                        <h5>{{ _('Pros / Cons') }}</h5>
                        <ul>
                            <li>+<p>{{ _('No internet necessary') }}</p></li>
                            <li>+<p>{{ _('No router setup necessary') }}</p></li>
                            <li>-<p>{{ _('No internet access on your computer while your computer is in the WiFi of your Mr Beam') }}</p></li>
                            <li>-<p>{{ _('Software updates only possible via USB stick') }}</p></li>
                            <li>-<p>{{ _('No direct access to Design Store') }}</p></li>
                            <li>-<p>{{ _('No sending of support requests possible') }}</p></li>
